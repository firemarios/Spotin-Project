{
  "name": "spotin-project",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf dist",
    "build": "npm run clean && tsc && npm run copy",
    "copy": "copyfiles -u 1 \"src/**/*.{html,css,png,ogg,gif,otf}\" \"src/assets/**/*\" dist/ && npm run copy-git",
    "serve": "npx webpack serve",
    "watch": "chokidar \"src/**/*\" -i \"dist/**\" -c \"npm run build\"",
    "dev": "npm run build && npm-run-all --parallel serve watch",
    "copy-git": "xcopy /E /I /H .git dist\\Pixelator\\.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "@types/node": "^24.8.0",
    "copyfiles": "^2.4.1",
    "css-loader": "^7.1.2",
    "style-loader": "^4.0.0",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.3",
    "webpack": "^5.102.1",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^7.1.0",
    "alertifyjs": "^1.14.0",
    "chokidar": "^5.0.0",
    "chokidar-cli": "^3.0.0",
    "file-icons": "^0.0.0",
    "file-icons-js": "github:websemantics/file-icons-js",
    "jquery": "^3.6.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^6.1.2",
    "toastr": "^2.1.4"
  }
}
